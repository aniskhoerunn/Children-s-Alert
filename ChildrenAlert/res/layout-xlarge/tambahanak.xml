<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#C9CACA" >
	
         <TextView
            android:id="@+id/textviewAnak"
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:background="#8D8D8C"
            android:gravity="center"
            android:text="Add your child"
            android:textSize="20sp" />
        
        <Button
            android:id="@+id/btnAddChild"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
   			android:background="@drawable/latar"
        	android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dip"
            android:layout_marginRight="7dip"
            android:text="+"
    		android:textColor="#ffffff"
    		android:fontFamily="sans-serif"
    		android:textStyle="bold"
            android:textSize="25sp" />
        
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dip"
            android:layout_height="120dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="48dp"
            android:src="@drawable/hp" />

        <Button
            android:id="@+id/buttoninputjarak"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imageView"
            android:text="OK"
            android:textSize="18sp" />
        
    </RelativeLayout>
    
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dip"
        android:layout_height="240dip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dip"
        android:layout_marginTop="186dp"
        android:fontFamily="Roboto"
        android:text="Hubungkan!"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="215dp"
        android:fontFamily="Roboto"
        android:text="Ikuti langkah ini, klik dan sebentar lagi anda akan berhasil menghubungkan kedua device"
        android:textColor="#C9CACA"
        android:textSize="18sp" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ListView>
    
</RelativeLayout>
